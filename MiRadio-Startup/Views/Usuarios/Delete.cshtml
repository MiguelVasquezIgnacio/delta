@model MiRadio_Startup.Models.Usuario

@{
    ViewData["Title"] = "Eliminar";
}

<!-- Estilo para la imagen de fondo -->
<style>
    body {
        background-image: url('/imagenes/imagen8.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100%;
        margin: 0;
    }

    .container {
        background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco semitransparente */
        padding: 20px;
        border-radius: 10px;
        margin-top: 50px;
        max-width: 600px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
    }

    h1, h3, h4 {
        text-align: center;
    }
</style>

<div class="container">
    <h1>Eliminar Usuario</h1>
    <h3>¿Estás seguro de que quieres eliminar este usuario?</h3>

    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <!-- Ocultar el campo de contraseña por seguridad -->
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Rol)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Volver Atrás</a>
        </div>
    </form>
</div>
