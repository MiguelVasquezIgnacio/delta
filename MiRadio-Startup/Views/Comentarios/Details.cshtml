@model MiRadio_Startup.Models.Comentario

@{
    ViewData["Title"] = "Detalles";
}

<style>
    body {
        background-image: url('/imagenes/imagen8.jpg'); /* Ruta a tu imagen de fondo */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100%;
    }

    .container {
        padding: 20px; /* Ajusta el espaciado interior según sea necesario */
    }
</style>
<h1>Detalles</h1>

<div>
    <h4>Comentario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPublicacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPublicacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioS)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioS.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MusicaS)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MusicaS.Autor)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdComentario">Editar</a> |
    <a asp-action="Index">Volver Atras</a>
</div>
