@model MiRadio_Startup.Models.Comentario

@{
    ViewData["Title"] = "Editar";
    Layout = null; // No se utilizará ningún layout para esta página
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Estilos adicionales -->
    <style>
        body {
            background-image: url('/imagenes/imagen8.jpg'); /* Ruta a tu imagen de fondo */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh; /* Ajusta la altura del fondo al 100% del viewport */
            padding: 20px; /* Ajuste opcional para el espacio interior */
        }

        .container {
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9); /* Fondo semi-transparente */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px; /* Espacio desde la parte superior */
        }

        .table-blue-border {
            border: 2px solid #007bff; /* Color azul de Bootstrap */
        }

        .form-control-blue-border {
            border: 1px solid #007bff; /* Color azul de Bootstrap */
        }

            .form-control-blue-border:focus {
                border-color: #0056b3; /* Color azul más oscuro al enfocar */
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Efecto de enfoque de Bootstrap */
            }

        .btn-primary {
            margin-top: 10px; /* Margen superior para el botón */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Editar Comentario</h1>

        <h4>Comentario</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Campo oculto para IdComentario -->
                    <input type="hidden" asp-for="IdComentario" />

                    <!-- Campo de texto para el comentario -->
                    <div class="form-group">
                        <label asp-for="Texto" class="control-label"></label>
                        <input asp-for="Texto" class="form-control form-control-blue-border" />
                        <span asp-validation-for="Texto" class="text-danger"></span>
                    </div>

                    <!-- Dropdown para seleccionar el Usuario -->
                    <div class="form-group">
                        <label asp-for="UsuarioId" class="control-label"></label>
                        <select asp-for="UsuarioId" class="form-control form-control-blue-border" asp-items="ViewBag.UsuarioId"></select>
                        <span asp-validation-for="UsuarioId" class="text-danger"></span>
                    </div>

                    <!-- Dropdown para seleccionar la Música -->
                    <div class="form-group">
                        <label asp-for="MusicaId" class="control-label"></label>
                        <select asp-for="MusicaId" class="form-control form-control-blue-border" asp-items="ViewBag.MusicaId"></select>
                        <span asp-validation-for="MusicaId" class="text-danger"></span>
                    </div>

                    <!-- Botón de enviar -->
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
        </div>
    </div>

    <!-- Enlace a Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
