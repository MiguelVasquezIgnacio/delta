@model MiRadio_Startup.Models.Comentario

@{
    ViewData["Title"] = "Eliminar";
    Layout = null; // No se utilizará ningún layout para esta página
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Comentario</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Estilos adicionales -->
    <style>
        body {
            background-image: url('/imagenes/imagen8.jpg'); /* Ruta a tu imagen de fondo */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh; /* Ajusta la altura del fondo al 100% del viewport */
            padding: 20px; /* Ajuste opcional para el espacio interior */
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9); /* Fondo semi-transparente */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px; /* Espacio desde la parte superior */
        }

        .btn-danger {
            margin-right: 10px; /* Margen derecho para los botones */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Eliminar Comentario</h1>

        <h3>¿Está seguro que desea eliminar este comentario?</h3>
        <div>
            <h4>Detalles del Comentario</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Texto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Texto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaPublicacion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaPublicacion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UsuarioS)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UsuarioS.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MusicaS)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MusicaS.Autor)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdComentario" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
            </form>
        </div>
    </div>

    <!-- Enlace a Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
